{
  "name": "vsc-adv-search",
  "displayName": "Advanced Search (주석 제외)",
  "description": "주석을 제외하고 코드만 검색하는 고급 검색 익스텐션",
  "version": "0.0.1",
  "engines": {
    "vscode": "^1.74.0"
  },
  "categories": [
    "Other"
  ],
  "activationEvents": [
    "onCommand:advSearch.searchIgnoreComments",
    "onCommand:advSearch.nextMatch",
    "onCommand:advSearch.prevMatch",
    "onCommand:advSearch.toggleSearchPanel"
  ],
  "main": "./out/extension.js",
  "contributes": {
    "commands": [
      {
        "command": "advSearch.searchIgnoreComments",
        "title": "주석 제외 검색",
        "category": "Advanced Search"
      },
      {
        "command": "advSearch.nextMatch",
        "title": "다음 검색 결과로 이동",
        "category": "Advanced Search"
      },
      {
        "command": "advSearch.prevMatch",
        "title": "이전 검색 결과로 이동",
        "category": "Advanced Search"
      },
      {
        "command": "advSearch.toggleSearchPanel",
        "title": "검색 패널 토글",
        "category": "Advanced Search"
      }
    ],
    "keybindings": [
      {
        "command": "advSearch.searchIgnoreComments",
        "key": "ctrl+shift+f",
        "when": "editorTextFocus"
      },
      {
        "command": "advSearch.nextMatch",
        "key": "f3",
        "when": "editorTextFocus"
      },
      {
        "command": "advSearch.prevMatch",
        "key": "shift+f3",
        "when": "editorTextFocus"
      },
      {
        "command": "advSearch.toggleSearchPanel",
        "key": "ctrl+shift+p",
        "when": "editorTextFocus"
      }
    ]
  },
  "scripts": {
    "vscode:prepublish": "npm run compile",
    "compile": "tsc -p ./",
    "watch": "tsc -watch -p ./"
  },
  "devDependencies": {
    "@types/vscode": "^1.74.0",
    "@types/node": "16.x",
    "typescript": "^4.9.4"
  }
} 